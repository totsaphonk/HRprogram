@page
@model HR.LeaveManagement.Web.Pages.LeaveRequests.ApproveModel
@{
    ViewData["Title"] = "Approve Leave Request";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Approve Leave Request</h2>
            
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>Leave Request Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Employee:</strong> @Model.LeaveRequest.Employee.FullName</p>
                            <p><strong>Department:</strong> @Model.LeaveRequest.Employee.Department</p>
                            <p><strong>Leave Type:</strong> @Model.LeaveRequest.LeaveType.Name</p>
                            <p><strong>Duration:</strong> @Model.LeaveRequest.Duration days</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>From Date:</strong> @Model.LeaveRequest.FromDate.ToString("yyyy-MM-dd")</p>
                            <p><strong>To Date:</strong> @Model.LeaveRequest.ToDate.ToString("yyyy-MM-dd")</p>
                            <p><strong>Applied On:</strong> @Model.LeaveRequest.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                            <p><strong>Status:</strong> 
                                <span class="badge bg-warning">@Model.LeaveRequest.Status</span>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p><strong>Reason:</strong></p>
                            <p class="bg-light p-2 rounded">@Model.LeaveRequest.Reason</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <form method="post">
                <input type="hidden" asp-for="LeaveRequest.RequestID" />
                <input type="hidden" asp-for="LeaveRequest.EmployeeID" />
                <input type="hidden" asp-for="LeaveRequest.LeaveTypeID" />
                <input type="hidden" asp-for="LeaveRequest.FromDate" />
                <input type="hidden" asp-for="LeaveRequest.ToDate" />
                <input type="hidden" asp-for="LeaveRequest.Duration" />
                <input type="hidden" asp-for="LeaveRequest.Reason" />
                <input type="hidden" asp-for="LeaveRequest.CreatedAt" />
                
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Approval Decision</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="LeaveRequest.Comments" class="form-label">Approval Comments</label>
                            <textarea asp-for="LeaveRequest.Comments" class="form-control" rows="3" placeholder="Add any comments or notes about this approval..."></textarea>
                            <span asp-validation-for="LeaveRequest.Comments" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Approve Leave Request
                            </button>
                            <a class="btn btn-secondary" asp-page="Index">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model HR.LeaveManagement.Web.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Create New Employee</h2>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Employee.FullName" class="form-label">Full Name</label>
                    <input asp-for="Employee.FullName" class="form-control" />
                    <span asp-validation-for="Employee.FullName" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Employee.Department" class="form-label">Department</label>
                    <select asp-for="Employee.Department" class="form-control">
                        <option value="">Select Department</option>
                        <option value="IT">IT</option>
                        <option value="HR">HR</option>
                        <option value="Finance">Finance</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Operations">Operations</option>
                    </select>
                    <span asp-validation-for="Employee.Department" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Employee.Role" class="form-label">Role</label>
                    <input asp-for="Employee.Role" class="form-control" />
                    <span asp-validation-for="Employee.Role" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Employee.Email" class="form-label">Email</label>
                    <input asp-for="Employee.Email" class="form-control" type="email" />
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Employee.JoinDate" class="form-label">Join Date</label>
                    <input asp-for="Employee.JoinDate" class="form-control" type="date" />
                    <span asp-validation-for="Employee.JoinDate" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Employee.ActiveStatus" type="checkbox" />
                        <label class="form-check-label" asp-for="Employee.ActiveStatus">
                            Active Status
                        </label>
                    </div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

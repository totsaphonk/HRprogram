@page
@model HR.LeaveManagement.Web.Pages.EntitlementRules.CreateModel
@{
    ViewData["Title"] = "Create Entitlement Rule";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Create New Entitlement Rule</h2>
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="EntitlementRule.LeaveTypeID" class="form-label">Leave Type</label>
                    <select asp-for="EntitlementRule.LeaveTypeID" class="form-control">
                        <option value="">Select Leave Type</option>
                        @foreach (var leaveType in Model.LeaveTypes)
                        {
                            <option value="@leaveType.LeaveTypeID">@leaveType.Name</option>
                        }
                    </select>
                    <span asp-validation-for="EntitlementRule.LeaveTypeID" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="EntitlementRule.Condition" class="form-label">Years of Service Requirement</label>
                    <select asp-for="EntitlementRule.Condition" class="form-control" id="conditionSelect">
                        <option value="">Select Condition</option>
                        <option value="YearsOfService >= 0">All employees (0+ years)</option>
                        <option value="YearsOfService >= 1">1+ years of service</option>
                        <option value="YearsOfService >= 2">2+ years of service</option>
                        <option value="YearsOfService >= 3">3+ years of service</option>
                        <option value="YearsOfService >= 5">5+ years of service</option>
                        <option value="YearsOfService >= 10">10+ years of service</option>
                        <option value="YearsOfService >= 15">15+ years of service</option>
                    </select>
                    <span asp-validation-for="EntitlementRule.Condition" class="text-danger"></span>
                    <div class="form-text">Select the minimum years of service required for this entitlement</div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="EntitlementRule.EntitledDays" class="form-label">Entitled Days</label>
                    <input asp-for="EntitlementRule.EntitledDays" class="form-control" type="number" min="0" max="365" />
                    <span asp-validation-for="EntitlementRule.EntitledDays" class="text-danger"></span>
                    <div class="form-text">Number of days employee is entitled to per year for this condition</div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

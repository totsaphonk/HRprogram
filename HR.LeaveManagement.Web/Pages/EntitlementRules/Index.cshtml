@page
@model HR.LeaveManagement.Web.Pages.EntitlementRules.IndexModel
@{
    ViewData["Title"] = "Entitlement Rules";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Entitlement Rules Management</h2>
                <a class="btn btn-primary" asp-page="Create" asp-route-leaveTypeId="@Model.LeaveTypeId">Add New Rule</a>
            </div>
            
            @if (Model.LeaveTypeId.HasValue)
            {
                <div class="alert alert-info">
                    <strong>Filtering by Leave Type:</strong> @Model.LeaveTypeName
                    <a class="btn btn-sm btn-outline-secondary ms-2" asp-page="Index">Show All Rules</a>
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h5>Entitlement Rules</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Leave Type</th>
                                    <th>Condition</th>
                                    <th>Entitled Days</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rule in Model.EntitlementRules)
                                {
                                    <tr>
                                        <td>@rule.RuleID</td>
                                        <td>
                                            <span class="badge bg-primary">@rule.LeaveType.Name</span>
                                        </td>
                                        <td>@rule.Condition</td>
                                        <td>
                                            <strong>@rule.EntitledDays</strong> days
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary" asp-page="Details" asp-route-id="@rule.RuleID">View</a>
                                            <a class="btn btn-sm btn-outline-warning" asp-page="Edit" asp-route-id="@rule.RuleID">Edit</a>
                                            <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@rule.RuleID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

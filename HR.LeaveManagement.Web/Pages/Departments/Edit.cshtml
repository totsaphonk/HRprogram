@page
@model HR.LeaveManagement.Web.Pages.Departments.EditModel
@{
    ViewData["Title"] = "Edit Department";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Edit Department</h2>
                <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Update Department Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Department.DepartmentID" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Department.Name" class="form-label"></label>
                                    <input asp-for="Department.Name" class="form-control" />
                                    <span asp-validation-for="Department.Name" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="Department.Description" class="form-label"></label>
                                    <textarea asp-for="Department.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Department.Description" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="Department.ManagerID" class="form-label"></label>
                                    <select asp-for="Department.ManagerID" class="form-select" asp-items="ViewBag.ManagerID">
                                        <option value="">-- Select Manager --</option>
                                    </select>
                                    <span asp-validation-for="Department.ManagerID" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                    <a class="btn btn-outline-secondary" asp-page="Details" asp-route-id="@Model.Department.DepartmentID">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

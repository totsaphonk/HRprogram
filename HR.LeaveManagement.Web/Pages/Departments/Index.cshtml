@page
@model HR.LeaveManagement.Web.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Departments";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Department Management</h2>
                <a class="btn btn-primary" asp-page="Create">Add New Department</a>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Department List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Manager ID</th>
                                    <th>Employee Count</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var department in Model.Departments)
                                {
                                    <tr>
                                        <td>@department.Name</td>
                                        <td>@(string.IsNullOrEmpty(department.Description) ? "No description" : department.Description)</td>
                                        <td>@(department.ManagerID?.ToString() ?? "Not Assigned")</td>
                                        <td>
                                            <span class="badge bg-info">@department.Employees.Count</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a class="btn btn-sm btn-outline-primary" asp-page="Details" asp-route-id="@department.DepartmentID" title="View Details">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                <a class="btn btn-sm btn-outline-warning" asp-page="Edit" asp-route-id="@department.DepartmentID" title="Edit Department">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@department.DepartmentID" title="Delete Department">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
